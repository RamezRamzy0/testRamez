<Page x:Class="Task_Management_App.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task_Management_App"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Login">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="windows-11-logo-colorful-background-digital-art-hd-wallpaper-uhdpaper.com-127@0@h.jpg"/>
        </Grid.Background>

        <Label Foreground="White" Content="Login Page" Width="350" Height="80" FontSize="60" FontFamily="Georgia" FontWeight="DemiBold" Margin="175,39,175,381"/>

        <Label Foreground="White" Content="Email" FontSize="24" Width="150" Height="40" Margin="175,174,375,286"/>
        <Label Foreground="White" Content="Password" FontSize="24" Width="150" Height="40" Margin="175,286,375,174"/>

        <TextBox Name="email_login_field" Background="LightGray" Width="300" Height="40" Margin="330,174,70,286"/>
        <TextBox Name="password_login_field" Background="LightGray" Width="300" Height="40" Margin="330,286,70,174"/>

        <Button Content="Login" FontSize="24" FontWeight="DemiBold" Width="100" Height="50" Margin="300,380,300,70" Click="Login_button"/>

    </Grid>
</Page>
